<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd">
	<body>
		<referenceBlock name="apptha_marketplace_allpayments.grid.container">
			<block class="Apptha\Marketplace\Block\Adminhtml\Allpayments\Grid"
				name="apptha_marketplace_allpayments.grid" as="grid">
				<arguments>
					<argument name="id" xsi:type="string">allpaymentsGrid</argument>
					<argument name="dataSource" xsi:type="object">Apptha\Marketplace\Model\ResourceModel\Payments\Collection</argument>
					<argument name="default_sort" xsi:type="string">id</argument>
					<argument name="default_dir" xsi:type="string">desc</argument>
					<argument name="save_parameters_in_session" xsi:type="boolean">true</argument>
					<argument name="use_ajax" xsi:type="boolean">true</argument>
					<argument name="grid_url" xsi:type="url" path="*/*/grid">
						<param name="_current">1</param>
					</argument>
				</arguments>

			</block>
		</referenceBlock>
	</body>
</page>